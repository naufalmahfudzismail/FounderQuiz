<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.erufal.quizpenemu.kuis1"
    android:background="@drawable/valey"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="#050505"
       android:fontFamily="sans-serif-smallcaps"
        android:textStyle="bold"
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Siapakah Penemu yang mendapat julukan Bapak Listrik?"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:background="#8bb6ea4f"
            android:fontFamily="casual"
            android:id="@+id/btn1_soal1"
            android:layout_width="130dp"
            android:layout_height="70dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:text="A. Charles Babbage"
            android:textAllCaps="false" />

        <Button
            android:textColor="#000000"
            android:textStyle="bold"
            android:background="#8bb6ea4f"
            android:fontFamily="casual"
            android:textAllCaps="false"
            android:layout_width="130dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:text="B. Michael Faraday"
            android:id="@+id/btn2_soal1"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <Button
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:background="#8bb6ea4f"
            android:fontFamily="casual"
            android:text="C. Andy Rubin         "
            android:textAllCaps="false"
            android:layout_width="130dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginRight="8dp"
            android:id="@+id/btn3_soal1"/>

        <Button
            android:textColor="#000000"
            android:textStyle="bold"
            android:background="#8bb6ea4f"
            android:fontFamily="casual"
            android:text="D. Ray Tomlinson   "
            android:textAllCaps="false"
            android:layout_width="130dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/btn4_soal1"/>



    </LinearLayout>
    </LinearLayout>

</ScrollView>