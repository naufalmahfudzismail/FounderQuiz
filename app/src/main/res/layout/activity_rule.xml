<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rule2"
   >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <TextView
        android:fontFamily="casual"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1.	    Kuis terdiri dari 10 soal"
        />
    <TextView
        android:fontFamily="casual"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2.	    Jika sudah menjawab, Kamu tidak bisa kembali ke soal sebelumnya"
        />
        <TextView
            android:fontFamily="casual"
            android:textColor="#000000"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3.	    Semua soal sesuai dengan materi yang disediakan"/>
    <TextView
        android:fontFamily="casual"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4.	    Setiap jawaban benar +4 , Salah -1"/>


    <TextView
        android:fontFamily="casual"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5.	    Soal nomor 1, 2, 6, 7 berbentuk button answer, Kamu harus mengklik jawaban yang tersedia"

        />
    <TextView
        android:fontFamily="casual"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6.	    Soal nomor 3, 8 berbentuk Radio button, kamu harus memilih salah satu jawaban lalu tombol akan muncul"

        />
    <TextView
        android:fontFamily="casual"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="7.	    Soal nomor 4, 9  berbentuk checkbutton answer, user dapat memilih banyak jawaban yang tersedia"

        />
    <TextView
        android:fontFamily="casual"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" 8.	  Soal nomor 5, 10 berbentuk Fill in the blank, Kamu harus menjawab di tempat yang di sediakan "

        />
    <TextView
        android:fontFamily="casual"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" 9.	   Penilaian berdasarkan range score :"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt2"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/txt2"
            android:fontFamily="casual"
            android:text="•	Score >= 25  = (A)"
            android:textColor="#000000" />

        <TextView
            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="casual"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/txt1"
            android:id="@+id/txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="•	Score >= 15   = (B)" />

        <TextView
            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="casual"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/txt2"
            android:id="@+id/txt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="•	Score >= 5   = (C)"
            />
        <TextView
            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="casual"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/txt3"
            android:id="@+id/txt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="•	Score  >=  1  =  (D) "

            />
        <TextView
            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="casual"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/txt4"
            android:id="@+id/txt5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="•	1  >  Score    = (E)"
            />
        </LinearLayout>

        <Button
            android:fontFamily="casual"
            android:id="@+id/next"
            android:text="Start Quiz"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:textColor="#88ff00"
            android:background="#c6b4363a"
            android:layout_height="70dp" />

    </LinearLayout>
</ScrollView>
