<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/kuis5"
    android:id="@+id/mainLayout"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:textColor="#df212e"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="bold"
        android:layout_marginTop="130dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Siapakah penemu          Al-Jabar?"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_gravity="center"
        />

    <TextView
        android:textStyle="bold"
        android:textColor="#00284d"
        android:layout_marginTop="30dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Jawaban :"
    android:textSize="25sp"
    android:layout_gravity="center"
    />

    <EditText
        android:background="@drawable/edittext"
        android:textAlignment="center"
        android:textColor="#24251a"
        android:textSize="20sp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:backgroundTint="#8155ff00"
        android:layout_marginTop="30dp"
        android:id="@+id/jawaban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_marginTop="100dp"
            android:fontFamily="casual"
            android:id="@+id/next"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#7624e6b6"
            android:text="Next"
            android:textColor="#f5d911cf" />

    </RelativeLayout>

    </LinearLayout>
</ScrollView>
